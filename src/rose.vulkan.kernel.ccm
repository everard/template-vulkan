struct error {
    long long line, code;
};

////////////////////////////////////////////////////////////////////////////////
// Span access interface.
////////////////////////////////////////////////////////////////////////////////

template <typename T, size_t N>
constexpr auto
size(std::span<T, N> x) noexcept -> uint32_t {
    return static_cast<uint32_t>(x.size());
}

template <typename T, size_t N>
constexpr auto
data(std::span<T, N> x) noexcept {
    return x.data();
}

